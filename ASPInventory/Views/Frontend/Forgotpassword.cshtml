
@{
    ViewBag.Title = "ลืมรหัสผ่าน";
    Layout = "~/Views/Layouts/_AuthenLayout.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
            <div class="col-lg-6">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-2">ลืมรหัสผ่านใช่หรือไม่ ?</h1>
                        <p class="mb-4">
                            เราจะส่งรหัสผ่านไปให้ทางอีเมล์ที่ลงทะเบียนไว้
                        </p>
                    </div>
                    <form class="user">
                        <div class="form-group">
                            <input type="email" class="form-control form-control-user"
                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                   placeholder="ป้อนอีเมล์">
                        </div>
                        <a href="login.html" class="btn btn-primary btn-user btn-block">
                            ส่งลิงก์รีเซ็ตรหัสผ่าน
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        @Html.ActionLink("ลงทะเบียน", "Register", "Frontend", null, new { @class = "small" })
                    </div>
                    <div class="text-center">
                        @Html.ActionLink("เป็นสมาชิกอยู่แล้ว ? เข้าสู่ระบบ", "Login", "Frontend", null, new { @class = "small" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


